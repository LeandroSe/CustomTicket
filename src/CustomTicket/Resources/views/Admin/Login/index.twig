<!DOCTYPE html>
<html>
    <head>
        <title>Login {{project_separator}} {{project_title}}</title>
        {% if environment == "dev" %}
            <script type="text/javascript" src="/js/customticket.js"></script>
            <link rel="stylesheet" href="/css/customticket.css">
        {% else %}
            <script type="text/javascript" src="/js/customticket.min.js"></script>
            <link rel="stylesheet" href="/css/customticket.min.css">
        {% endif %}
        <style type="text/css">
            .container {
                width: 400px;
                max-width: 90%;
                background: #EEEEEE;
                border-radius: 5px;
                padding: 15px;
                margin-top: 50px;
                box-shadow: 0px 2px 5px 0px #CCCCCC;
            }
            h1 {
                margin: 0;
                padding: 0;
                margin-bottom: 15px;
                font-size: 2em;
                text-align: center;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <form action="{{ path('admin_login_check') }}" method="post">
                <h1>{{project_title}}</h1>
                {{ error }}
                <div class="form-group">
                    <input type="text" name="_username" value="{{ last_username }}" placeholder="UsuÃ¡rio" autofocus class="form-control" />
                </div>
                <div class="form-group">
                    <input type="password" name="_password" value="" placeholder="Senha" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary col-xs-12">Logar</button>
            </form>
        </div>
    </body>
</html>
